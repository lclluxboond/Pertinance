<div>
  <label>keyWord</label>
  <input type="text" name="keyWord" value="<%= kwd.keyWord %>" />
</div>
<div>
  <label>main Keyword</label>
  <select name="mainKwd">
    <option <% if (!kwd.mainKwd) { %>
      selected<% } %> label="---" value=<%= 'null' %> >
    </option>
    <% if (!mainKwd) { %>
      <% kwds.forEach(kwd => { %>
        <option label="<%=kwd.keyWord %>" value="<%= kwd.id %>"></option>
        <% }) %>
    <% } else { %>
    <% kwds.forEach(kwd => { %>
    <option <% if (kwd.id == mainKwd.id ) { %>
      selected<% } %> label="<%=kwd.keyWord %>" value="<%= kwd.id %>"></option>
    <% }) %> <% } %>
  </select>
</div>
<div>
  <label>field</label>
  <select name="fld">
    <% flds.forEach(fld => { %> <% if (fld.id == kwd.fld) { %>
    <option selected label="<%=fld.field %>" value="<%= fld.id %>"></option>
    <% } else { %>
    <option label="<%=fld.field %>" value="<%= fld.id %>"></option>
    <% } %> <% }) %>
  </select>
</div>
