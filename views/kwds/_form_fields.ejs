<div>
  <label>keyWord</label>
  <input type="text" name="keyWord" value="<%= kwd.keyWord %>" />
</div>
<div>
  <label>field</label>
  <select name="field">
    <% flds.forEach(fld => { %> <% if (fld.id === kwd.field) { %>
    <option selected label="<%=fld.field %>" value="<%= fld.id %>">
      <% } else { %>
    </option>
    <option label="<%=fld.field %>" value="<%= fld.id %>">
      <% } %> <% }) %>
    </option>
  </select>
</div>
<div>
  <label>mainKeyWord</label>
  <select name="mainKeyWord">
    <option label="none" value=""></option>
    <% kwds.forEach(kwd => { %> <% if (kwd.id === kwd.kwd) { %>
    <option selected label="<%=kwd.keyWord %>" value="<%= kwd.id %>">
      <% } else { %>
    </option>
    <option label="<%=kwd.keyWord %>" value="<%= kwd.id %>">
      <% } %> <% }) %>
    </option>
  </select>
</div>
