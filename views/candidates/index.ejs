<h2 class="page-header">Candidates</h2>
<form>
  <div>
    <label>id</label>
    <input type="number" name="id" value="<%= searchOptions.id %>" />
  </div>
  <div>
    <label>firstName</label>
    <input type="text" name="firstName" value="<%=searchOptions.firstName %>" />
  </div>
  <div>
    <label>lastName</label>
    <input type="text" name="lastName" value="<%=searchOptions.lastName %>" />
  </div>
  <div>
    <label>title</label>
    <input type="text" name="title" value="<%=searchOptions.title %>" />
  </div>
  <div>
    <label>email1</label>
    <input type="text" name="email1" value="<%=searchOptions.email1 %>" />
  </div>
  <div>
    <label>skills</label>
    <textarea name="skills"><%= searchOptions.skills %></textarea>
    <br />
  </div>
  <br /><button class="btn btn-primary" type="submit">Search</button>
  <input type="hidden" name="injectUrl" value="candidates/inject" />
</form>
<form method="POST" action="/candidates/inject">
  <br /><button class="btn btn-primary" type="submit">Inject Candidates</button>
</form>
<br />
<% if (candidates && candidates.length) { %>
<div><%= candidates.length %> candidates found</div>
<br />
<% candidates.forEach(candidate =>{ %> <%= candidate.attributes.firstName %> <%=
candidate.attributes.lastName %> {<%= candidate.id %>}
<div class="btn-row">
  <a class="btn btn-primary" href="/candidates/<%= candidate.id %>">view</a>
</div>
<br />
<% }) %> <% } else { %>
<div>No candidates found.</div>
<% } %>
